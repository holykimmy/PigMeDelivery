<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyProjectAPP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bghome</item>
        <item name="colorPrimaryVariant">#E89292</item>
        <item name="colorOnPrimary">@color/gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bghome</item>
        <item name="colorSecondaryVariant">@color/maroon</item>
        <item name="colorOnSecondary">@color/bghome</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/fredokaone_regular</item>
    </style>


    <style name="Botton">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#FFFF</item>
        <item name="android:radius">50dp</item>
        <item name="android:fontFamily">@font/fredokaone_regular</item>
        <!--        <item name="android:textStyle">bold</item>-->
        <item name="android:backgroundTint">#F9B2B2</item>
        <!--        <item name="android:background">@drawable/rounded_corner</item>-->
        <item name="android:background">@drawable/custum_button</item>
    </style>

    <style name="BottonWhite">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/bghome</item>
        <item name="android:radius">50dp</item>
        <item name="android:fontFamily">@font/fredokaone_regular</item>
        <!--        <item name="android:textStyle">bold</item>-->
        <item name="android:backgroundTint">@color/white</item>
        <!--        <item name="android:background">@drawable/rounded_corner</item>-->

    </style>


    <style name="Input">
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#868686</item>
        <item name="background">@drawable/custom_input</item>
        <item name="android:fontFamily">@font/fredokaone_regular</item>

    </style>

    <style name="TextGray">
        <item name="android:fontFamily">@font/fredokaone_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextShadow">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">50</item>

    </style>

    <style name="imgFood">
        <item name="background">@drawable/custom_input</item>
    </style>


</resources>