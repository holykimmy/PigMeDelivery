<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"

    android:background="@color/bghome">


    <View
        style="@style/TextShadow"
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="52dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="320dp"
        android:layout_height="211dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:srcCompat="@drawable/logopigmee" />

    <TextView
        android:id="@+id/textView"
        style="@style/TextGray"
        android:layout_width="69dp"
        android:layout_height="36dp"
        android:layout_marginTop="4dp"
        android:text="Login"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="116dp"
        android:layout_height="34dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/fredokaone_regular"
        android:onClick="openAppInfo"
        android:text="Don't have accout?"
        android:textColor="@color/gray"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/Skipbtn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Loginbtn"
        style="@style/Botton"
        android:layout_width="112dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:text="Login"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passInput"
        tools:ignore="TextContrastCheck,TextContrastCheck" />

    <EditText
        android:id="@+id/emailInput"
        style="@style/Input"
        android:layout_width="231dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/email"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="Email"
        android:inputType="textWebEmailAddress|textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="TouchTargetSizeCheck" />


    <EditText
        android:id="@+id/passInput"
        style="@style/Input"
        android:layout_width="230dp"
        android:layout_height="43dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/password"
        android:ems="10"
        android:hint="password"
        android:inputType="textPersonName|textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailInput" />


    <Button
        android:id="@+id/Skipbtn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="65dp"
        android:layout_height="36dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/fredokaone_regular"
        android:onClick="openAppInfo"
        android:text="skip"
        android:textColor="#F9B2B2"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/Registerbtn"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/Loginbtn" />

    <Button
        android:id="@+id/Registerbtn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="82dp"
        android:layout_height="39dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="88dp"
        android:fontFamily="@font/fredokaone_regular"
        android:text="Signup"
        android:textColor="#F9B2B2"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/Skipbtn" />
</androidx.constraintlayout.widget.ConstraintLayout>