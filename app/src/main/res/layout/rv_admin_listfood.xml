<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"

    android:padding="2dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewlist"
        android:layout_width="345dp"
        android:layout_height="95dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="7dp"
        app:contentPadding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="361dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnConfirm_adminorder"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:elevation="2dp"
                android:text="Delete"
                android:backgroundTint="@color/maroon"
                android:textColor="#FFFFFF"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.885"
                app:layout_constraintStart_toEndOf="@+id/imgEdit"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="#000000" />

            <Button
                android:id="@+id/btnCancel_adminorder"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="12dp"
                android:elevation="2dp"
                android:text="Update"
                android:textColor="#FFFFFF"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.885"
                app:layout_constraintStart_toEndOf="@+id/imgEdit"
                app:layout_constraintTop_toBottomOf="@+id/btnConfirm_adminorder"
                app:strokeColor="#000000" />

            <ImageView
                android:id="@+id/imgEdit"
                style="@style/imgFood"
                android:layout_width="86dp"
                android:layout_height="72dp"
                android:layout_gravity="center|clip_vertical|start"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="21dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvadmindateOrder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.615"
                app:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/tvadmindateOrder"
                android:layout_width="133dp"
                android:layout_height="49dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/fredokaone_regular"
                android:text="Foodname"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/imgEdit"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvpriceadminorder"
                android:layout_width="129dp"
                android:layout_height="21dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="102dp"
                android:fontFamily="@font/fredokaone_regular"
                android:text="price"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/btnCancel_adminorder"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imgEdit"
                app:layout_constraintTop_toBottomOf="@+id/tvadmindateOrder"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>